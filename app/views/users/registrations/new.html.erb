<div class='login-form screen-centered centered'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= image_tag "renewal_logo.png" %>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      Ainda n√£o possui uma conta? <br>
      <%= link_to t('devise.registrations.new.sign_up'),new_registration_path(resource_name) %><br />
    <% end %>
    <div class="form-group">
      <%= f.email_field :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" },
        placeholder: t('activerecord.attributes.user.email'),
        label: false
      %>
    </div>

    <div class="form-group">
      <%= f.password_field :password,
        required: true,
        input_html: { autocomplete: "current-password"},
        placeholder: t('activerecord.attributes.user.password'),
        label: false
      %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation,
        required: true,
        input_html: { autocomplete: "current-password"},
        placeholder: t('activerecord.attributes.user.password_confirmation'),
        label: false
      %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.registrations.new.sign_up'), class: 'btn btn-login login-form'%>
    </div>
    <div class='or-seperator'><br></div>
    <%= render "users/shared/links" %>
  <% end %>
</div>