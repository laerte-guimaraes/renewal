<div class='login-form screen-centered centered'>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= image_tag "renewal_logo.png" %>

    <div class="form-group">
      <%= f.password_field :password,
        required: true,
        input_html: { autocomplete: "current-password"},
        placeholder: t('activerecord.attributes.user.new_password'),
        label: false
      %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation,
        required: true,
        input_html: { autocomplete: "current-password"},
        placeholder: t('activerecord.attributes.user.new_password_confirmation'),
        label: false
      %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.passwords.edit.change_my_password'), class: 'btn btn-login login-form'%>
    </div>
    <div class='or-seperator'><br></div>
    <%= render "users/shared/links" %>
  <% end %>
</div>
