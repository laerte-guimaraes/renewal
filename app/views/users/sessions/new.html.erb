<div class="login-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Login</h2>
    <div class="form-group">
      <%= f.input :email,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "email" }, placeholder: 'informe seu e-mail', label: false %>
    </div>
    <div class="form-group">
      <%= f.input :password,
            required: true,
            input_html: { autocomplete: "current-password" }, placeholder: 'senha', label: false %>
    </div>

    <div class="form-group">
      <%= f.button :submit, 'Entrar', class: 'btn btn-primary login-btn btn-block' %>
    </div>

    <div class="clearfix">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="or-seperator"></div>
    <br>
    <p class="text-center text-muted small"><%= render "users/shared/links" %></p>
  <% end %>
</div>