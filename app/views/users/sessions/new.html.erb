<div class="login-form screen-centered centered">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
      <%= image_tag "renewal_logo.png" %>
      <p class="login-access-title">Olá! Faça seu login.</p>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Ainda não possui uma conta? <br>
        <%= link_to "Faça seu cadastro",new_registration_path(resource_name) %><br />
      <% end %>

      <div class="form-group">
        <%= f.input :email,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "email" },
          placeholder: t('activerecord.attributes.user.email'),
          label: false
        %>
      </div>

      <div class="form-group">
        <%= f.input :password,
          required: true,
          input_html: { autocomplete: "current-password"},
          placeholder: t('activerecord.attributes.user.password'),
          label: false
        %>
        <%= f.button :submit,
          t('devise.sessions.new.sign_in'),
          class: 'btn btn-primary login-btn btn-block'
        %>
      </div>
    </div>

    <div class="or-seperator"><br></div>

    <p class="text-center text-muted small">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          Problemas com o acesso? <br>
          <%= link_to "Recupere sua senha", new_password_path(resource_name) %><br />
        <% end %>
    </p>
  <% end %>
</div>